# Production Environment Configuration
# Copy this file to .env.local for local development
# Copy to .env.production for production builds

# Deployment variables (if using Netlify)
NETLIFY_AUTH_TOKEN=your_netlify_auth_token_here
NETLIFY_SITE_ID=your_netlify_site_id_here

# API configuration
VITE_API_GRAPHQL_URL=https://beta.pokeapi.co/graphql/v1beta
VITE_API_REST_URL=https://pokeapi.co/api/v2

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ADVANCED_SEARCH=true

# Security settings
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMITING=true

# Supabase configuration
VITE_SUPABASE_URL=https://kefcxvcbpadksfizrckw.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Performance settings
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true

# Don't change these (automatically set during build)
VITE_APP_VERSION=$npm_package_version
VITE_BUILD_TIME=$BUILD_TIMESTAMP
